{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row justify-content-center" style="margin-top: 100px">
        <div class="col-6">
            <form action="{{ route('auth.register') }}" method="post">
                <input type="hidden" name="{{ csrf.key }}" value="{{ csrf.token }}">
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="text" name="email" id="email" class="form-control {{
                    errors.email ? 'is-invalid' : ''}}" placeholder="e.g. AlexanderSmith@gmail.com" value="{{ old.email }}">
                    {% if errors.email %}
                        <div class="text-danger" style=" margin-bottom: 10px">
                            <small> {{ errors.email | first }} </small>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" class="form-control {{
                    errors.name ? 'is-invalid' : ''}}" placeholder="e.g. Alexander Smith" value="{{ old.name }}">
                    {% if errors.name %}
                        <div class="text-danger" style=" margin-bottom: 10px">
                            <small> {{ errors.name | first }} </small>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control {{
                    errors.password ? 'is-invalid' : ''}}">
                    {% if errors.password %}
                        <div class="text-danger" style=" margin-bottom: 10px">
                            <small> {{ errors.password | first }} </small>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="password_confirmation">Password confirmation</label>
                    <input type="password" name="password_confirmation" class="form-control {{ errors.password_confirmation ? ' is-invalid' : '' }}" id="password_confirmation">

                    {% if errors.password_confirmation %}
                        <div class="text-danger">
                            <small> {{ errors.password_confirmation | first }} </small>
                        </div>
                    {% endif %}
                </div>
                <button type="submit" class="btn btn-primary">Create account</button>
            </form>

        </div>

    </div>
{% endblock %}
